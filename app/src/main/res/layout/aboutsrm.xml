<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutsrm"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/srmlogo"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_border"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="ABOUT\nSRM"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            android:background="#000000" />

        <ImageButton
            android:id="@+id/abt_srm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/welcome_to_srm"
            tools:ignore="OnClick,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/abt_vnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/vision_mission"
            tools:ignore="OnClick,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/abt_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/srm_history"
            tools:ignore="OnClick,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/abt_awards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/awards_and_achievements"
            tools:ignore="OnClick" />

        <ImageButton
            android:id="@+id/abt_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/srmus_act"
            tools:ignore="OnClick" />

        <ImageButton
            android:id="@+id/abt_statutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:onClick="onButtonClick"
            android:padding="8dp"
            android:src="@drawable/srmus_statutes"
            tools:ignore="OnClick" />
    </LinearLayout>

</ScrollView>
